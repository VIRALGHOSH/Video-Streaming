@model Video_Streaming.Models.Model_login

@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_UserMaster.cshtml";
}
<hr />
<div class="row">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
<div class="error">@Html.ValidationMessage("error")</div>   
                      <div style="color:green" > @Html.ValidationMessage("sucess")</div>        
                                <div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", @title = "Please enter your Email.", @placeholder = "Email address" })
                                            <div class="error">@Html.ValidationMessageFor(model => model.email)</div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-lg btn-primary btn-block">Send My Password</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}