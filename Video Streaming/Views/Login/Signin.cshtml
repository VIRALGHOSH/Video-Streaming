@model Video_Streaming.Models.Model_login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserMaster.cshtml";
}


<div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title login-title">Sign In</div>
            <div style="float: right; font-size: 80%; position: relative; top: -10px"><a class="ab" href="/login/forgot">Forgot password?</a></div>
        </div>
        <div style="padding-top: 30px" class="panel-body">

            <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>
             @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
	
            <div id="loginform" class="form-horizontal" role="form">
<div class="error">@Html.ValidationMessage("error") </div>   
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                   
                       @Html.TextBoxFor(model => model.email, new  { @class="form-control", @title="Please enter your Email." ,@placeholder="Email address" })
                      <div class="error"> @Html.ValidationMessageFor(model => model.email)</div>
                </div>
                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                      @Html.PasswordFor(model => model.password, new  { @class="form-control", @title="Please enter your Password." ,@placeholder="Password" })
                    <div class="error">  @Html.ValidationMessageFor(model => model.password)</div>
                </div>
         
                <div style="margin-top: 10px" class="form-group">
                    <!-- Button -->

                    <div class="col-sm-12 controls">
                      <button type="submit" class="btn btn-primary">Login</button>

                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 control">
                        <div style="border-top: 1px solid#888; padding-top: 15px; font-size: 85%">
                            Don't have an account! 
                                        <a href="/registration/signup" >Sign Up Here
                                            <br />
                                        </a>Didn't received Activation mail yet? 
                              <a href="/registration/resend">Resend mail Here  
                                        </a>
                        </div>
                    </div>
                </div>
            </div>
             }


        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}