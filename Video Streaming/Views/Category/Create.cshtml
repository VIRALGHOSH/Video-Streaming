@model Video_Streaming.Models.Model_category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="row">
	<div class="col-xs-12">
    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
		<div id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="forms-validation-state.html#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						<a href="forms-validation-state.html#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
					</div>
                    <h2 class="panel-title">Category</h2>
					<p class="panel-subtitle">
						Basic validation will display a label with the error after the form control.
					</p>
				</header>
				<div class="panel-body">
					<div class="form-group">
						<label class="col-sm-3 control-label">Category Name <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.TextBoxFor(model => model.cat_name, new { @class="form-control", @title="Please enter a Category name." ,@placeholder="Category Name" })
                            @Html.ValidationMessageFor(model => model.cat_name)
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Category description <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.TextBoxFor(model => model.cat_des, new { @class="form-control", @title="Please enter a Category description." ,@placeholder="Category description" })
                            @Html.ValidationMessageFor(model => model.cat_des)
						</div>
					</div>
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-sm-9 col-sm-offset-3">
							<button type="submit" class="btn btn-primary">Submit</button>
							<button type="reset" class="btn btn-default">Reset</button>
						</div>
					</div>
				</footer>
			</section>
		</div>
}
</div>
</div>
<script>
            function fnmenu() {
             
                $('#addcategory').addClass('nav-active');
        }
        </script>    
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
