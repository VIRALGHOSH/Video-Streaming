@model Video_Streaming.Models.Model_sub_category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="row">
	<div class="col-xs-12">
    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
		<div id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="forms-validation-state.html#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						<a href="forms-validation-state.html#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
					</div>
                    <h2 class="panel-title">Sub Category</h2>
					<h3 class="panel-subtitle">Are you sure you want to delete this?</h3>

				</header>
				<div class="panel-body">
						<div class="form-group">
						<label class="col-sm-3 control-label">Category Name <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.DisplayFor(model => model.cat_id, new { @class="form-control" })
						</div>
					</div>
						<div class="form-group">
						<label class="col-sm-3 control-label">Sub Category Name <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.DisplayFor(model => model.sub_cat_name, new { @class="form-control" })
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label">Sub Category description <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.DisplayFor(model => model.sub_cat_des, new { @class="form-control" })
						</div>
					</div>
				</div>

				<footer class="panel-footer">
					<div class="row">
						<div class="col-sm-9 col-sm-offset-3">
							<button type="submit" class="btn btn-primary">Submit</button>
							<button type="reset" class="btn btn-default">Reset</button>
						</div>
					</div>
				</footer>
			</section>
		</div>
}
</div>
</div>

@using (Html.BeginForm()) {
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}
