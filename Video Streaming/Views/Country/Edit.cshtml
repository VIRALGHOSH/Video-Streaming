@model Video_Streaming.Models.Model_country

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="row">
	<div class="col-xs-12">

    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
		<div id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="forms-validation-state.html#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						<a href="forms-validation-state.html#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
					</div>
                    <h2 class="panel-title">Country</h2>
					<p class="panel-subtitle">
						Basic validation will display a label with the error after the form control.
					</p>
				</header>
				<div class="panel-body">
					<div class="form-group">
						<label class="col-sm-3 control-label">Country Name <span class="required">*</span></label>
						<div class="col-sm-9">
                             @Html.HiddenFor(model => model.country_id)
							 @Html.TextBoxFor(model => model.country_name, new { @class="form-control", @title="Please enter a country name." ,@placeholder="Country Name" })
                             @Html.ValidationMessageFor(model => model.country_name)
						</div>
					</div>
					
				</div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-sm-9 col-sm-offset-3">
							<button class="btn btn-primary">Submit</button>
							<button type="reset" class="btn btn-default">Reset</button>
						</div>
					</div>
				</footer>
			</section>
		</div>
}
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
