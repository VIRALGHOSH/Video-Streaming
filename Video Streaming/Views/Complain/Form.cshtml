@model Video_Streaming.Models.Model_complain

@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_UserMaster.cshtml";
}
<hr />
<div class="container">
    <div class="well form-horizontal">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
<fieldset>

<!-- Form Name -->
<legend>Complain! Contact Us Today!</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label">Complain Subject</label>  
   <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
            @Html.ValidationMessageFor(model => model.com_sub)
	 @Html.TextBoxFor(model => model.com_sub, new  { @class="form-control", @title="Please enter Complain Sub." ,@placeholder="Complain Subject goes here" })
    </div>
  </div>
</div>


<!-- Text area -->
  
<div class="form-group">
  <label class="col-md-4 control-label">Complain Description</label>
    <div class="col-md-4 inputGroupContainer">
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
            @Html.ValidationMessageFor(model => model.com_des)
        	 @Html.TextAreaFor(model => model.com_des, new  { @class="form-control", @title="Please enter Complain." ,@placeholder="Complain Description goes here" })

  </div>
  </div>
</div>

<!-- Success message -->
<div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div>

<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label"></label>
  <div class="col-md-4">
    <button type="submit" class="btn btn-warning" >Send <span class="glyphicon glyphicon-send"></span></button>
  </div>
</div>

</fieldset>

}
    </div></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

