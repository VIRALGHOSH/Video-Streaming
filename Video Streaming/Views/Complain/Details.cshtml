@model Video_Streaming.Models.Model_complain

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<div class="row">
	<div class="col-xs-12">
    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
        <div id="form" class="form-horizontal">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="forms-validation-state.html#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                        <a href="forms-validation-state.html#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
                    </div>
                    <h2 class="panel-title">Complain</h2>
                    <p class="panel-subtitle">
                        Basic validation will display a label with the error after the form control.
                    </p>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Login ID<span class="required">*</span></label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.login_id, new { @class = "form-control", @title = "Please enter a country name.", @placeholder = "Country Name" })
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Complain Subject <span class="required">*</span></label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.com_sub, new { @class = "form-control", @title = "Please enter a country name.", @placeholder = "Country Name" })
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Complain Description <span class="required">*</span></label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.com_des, new { @class = "form-control", @title = "Please enter a country name.", @placeholder = "Country Name" })
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Complain Date <span class="required">*</span></label>
                        <div class="col-sm-9">
                         
                            @Html.DisplayFor(model => model.com_date)
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Complain Status <span class="required">*</span></label>
                        <div class="col-sm-9">
                     @ViewBag.comstatus;
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" class="btn btn-primary">Approve</button>
                            @Html.ActionLink("Cancel", "Index")

                        </div>
                    </div>
                </footer>
            </section>
        </div>
}
</div>
</div>