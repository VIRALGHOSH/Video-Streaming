@model Video_Streaming.Models.Model_complain

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}

<div class="row">
	<div class="col-xs-12">
    @using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
		<div id="form" class="form-horizontal">
			<section class="panel">
				<header class="panel-heading">
					<div class="panel-actions">
						<a href="forms-validation-state.html#" class="panel-action panel-action-toggle" data-panel-toggle></a>
						<a href="forms-validation-state.html#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
					</div>
                    <h2 class="panel-title">Complain</h2>
					<p class="panel-subtitle">
						Basic validation will display a label with the error after the form control.
					</p>
				</header>
				<div class="panel-body">
					<div class="form-group">
						<label class="col-sm-3 control-label">Login id<span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.TextBoxFor(model => model.login_id, new { @class="form-control" })
                            @Html.ValidationMessageFor(model => model.login_id)
						</div>
					</div>
                    <div class="form-group">
					    <label class="col-sm-3 control-label">Complain Subject <span class="required">*</span></label>
						<div class="col-sm-9">
							@Html.TextBoxFor(model => model.com_sub, new { @class="form-control", @title="Please enter a Complain Subject." ,@placeholder="Your Complain Subject" })
                            @Html.ValidationMessageFor(model => model.com_sub)
						</div>
					</div>
                    <div class="form-group">
                       
                        <label class="col-sm-3 control-label">Complain description <span class="required">*</span></label>
						    <div class="col-sm-9">
							@Html.TextAreaFor(model => model.com_des, new { @class="form-control",@rows="3", @title="Please enter a Complain description." ,@placeholder="Describe your Complain" })
                            @Html.ValidationMessageFor(model => model.com_des)
						    </div>
					    </div>
				    </div>
				<footer class="panel-footer">
					<div class="row">
						<div class="col-sm-9 col-sm-offset-3">
							<button type="submit" class="btn btn-primary">Submit</button>
							<button type="reset" class="btn btn-default">Reset</button>
						</div>
					</div>
				</footer>
			</section>
		</div>
}
</div>
</div>



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
